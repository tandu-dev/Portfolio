@using BlazorBlog.Data.Model;
@inject BlazorBlog.Data.Services.ApiService;

<h1>@post.Title</h1>
<span>@post.Timestamp</span>
<p>@post.Contents.SubString(0,100)</p>
<hr />

@code{
    public Post post {get; set;}

    [Parameter]
    public int PageNumber;

    [Parameter]
    public int PageSize;
    
    protected override async Task OnInitializedAsync()
    {
        post = await ApiService.getPost(postId);
    }
}
